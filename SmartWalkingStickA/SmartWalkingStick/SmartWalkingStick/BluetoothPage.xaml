<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartWalkingStick.BluetoothPage">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="scan" x:Name="scan" Clicked="scan_Clicked"/>
            <Button Text="Status" x:Name="status" Clicked="status_Clicked"/>
            <Button x:Name="connect" Text="connect" Clicked="connect_Clicked"/>
            <Button x:Name="record" Text="Record" Clicked="record_Clicked"/>
            <Button x:Name="play" Text="Play file" Clicked="play_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>